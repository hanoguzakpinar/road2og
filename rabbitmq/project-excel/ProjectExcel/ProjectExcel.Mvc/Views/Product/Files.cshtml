@{
    ViewData["Title"] = "Files";
}

@model List<UserFile>

@section Scripts {
    <script>
        $(document).ready(function() {
            var hasStarting = '@TempData["StartCreatingExcel"]';

            if (hasStarting) {
                Swal.fire({
                    position: "top-end",
                    icon: "success",
                    title: "Excel Oluşturma Başlandı.",
                    showConfirmButton: false,
                    timer: 1500
                });
            }
        });
    </script>
}

<h1>Files</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>File Name</th>
            <th>Created Date</th>
            <th>File Status</th>
            <th>Download</th>
        </tr>
    </thead>
    @foreach (var file in Model)
    {
        <tr>
            <td>@file.Id</td>
            <td>@file.FileName</td>
            <td>@file.CreatedDate</td>
            <td>@file.FileStatus</td>
            <td>
                <a class="btn btn-primary @(file.FileStatus == FileStatus.Creating ? "disabled" : "")"
                   href="~/files/@file.FilePath">Download</a>
            </td>
        </tr>
    }
</table>
